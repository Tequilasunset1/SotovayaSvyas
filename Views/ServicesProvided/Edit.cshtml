@model SotovayaSvyas.Models.ServicesProvided

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ServicesProvided</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServicesProvidedId" />
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantitySms" class="control-label"></label>
                <input asp-for="QuantitySms" type="number" min="0" class="form-control" />
                <span asp-validation-for="QuantitySms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVolume" class="control-label"></label>
                <input asp-for="DataVolume" type="number" min="0" class="form-control" />
                <span asp-validation-for="DataVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriberId" class="control-label"></label>
                <select asp-for="SubscriberId" class="form-control" asp-items="ViewBag.SubscriberId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
